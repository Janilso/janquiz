{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier",
        "prettier/react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        // "object-curly-newline": [
        //     "error",
        //     {
        //         "ObjectPattern": {
        //             "multiline": false
        //         },
        //         "ExportDeclaration": {
        //             "multiline": "never"
        //         }
        //     }
        // ],
        "linebreak-style": "off",
        "no-plusplus": [
            2,
            {
                "allowForLoopAfterthoughts": true
            }
        ]
    },
    "globals": {
        "React": "writable"
    }
}